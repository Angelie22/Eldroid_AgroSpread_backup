<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context="agrospread.DashboardFragment">

    <!-- Header -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:padding="16dp"
        android:src="@drawable/logo_app_black_ver"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <RelativeLayout
        android:id="@+id/searchBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape"
            android:textColor="@color/black"
            app:iconifiedByDefault="false"
            app:queryHint="Search item" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/showBasket"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="280dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/baseline_shopping_basket_24"
            android:tint="@android:color/white"
            app:fabSize="normal"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/showFavorite"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="350dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/baseline_favorite_24"
            android:tint="@android:color/white"
            app:fabSize="normal"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBarLayout"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Category"/>



                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:foregroundGravity="center_horizontal"
                    android:layout_marginTop="80dp">
                    <LinearLayout
                        android:id="@+id/buttonContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginStart="20dp">

                            <Button
                                android:id="@+id/btnAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#8EC8B8"
                                android:onClick="onCategoryButtonClick"
                                android:text="All"
                                android:textAllCaps="false"
                                android:textSize="5.5pt"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btnFertilizer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#8EC8B8"
                                android:onClick="onCategoryButtonClick"
                                android:text="Fertilizer"
                                android:textAllCaps="false"
                                android:textSize="5.5pt"
                                tools:ignore="TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btnPesticide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#8EC8B8"
                                android:onClick="onCategoryButtonClick"
                                android:text="Pesticide"
                                android:textAllCaps="false"
                                android:textSize="5.5pt"
                                tools:ignore="TextSizeCheck" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btnSeeds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#8EC8B8"
                                android:onClick="onCategoryButtonClick"
                                android:text="Seeds"
                                android:textAllCaps="false"
                                android:textSize="5.5pt"
                                tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btnTools"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#8EC8B8"
                                android:onClick="onCategoryButtonClick"
                                android:text="Tools"
                                android:textAllCaps="false"
                                android:textSize="5.5pt"
                                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="150dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:background="@drawable/sales"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:background="@drawable/sale"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <TextView
                    android:layout_marginTop="270dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Best Seller" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="180dp">

                            <ImageButton
                                android:id="@+id/bestSeller1"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:background="@color/white"
                                android:scaleType="fitCenter"
                                android:src="@drawable/fertilizer"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <CheckBox
                                android:id="@+id/wishlist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/wishlist_item"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:useMaterialThemeColors="false"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/addToCart1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="220dp"
                                android:background="@drawable/addcart"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="140dp"
                                android:textSize="10pt"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="#E82F21"

                                android:text="            30% Sale">

                            </TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="180dp">

                            <ImageButton
                                android:id="@+id/bestSeller2"
                                android:layout_width="250dp"
                                android:layout_height="150dp"
                                android:background="@color/white"
                                android:scaleType="fitCenter"
                                android:src="@drawable/pest"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <CheckBox
                                android:id="@+id/wishlist1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/wishlist_item"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:useMaterialThemeColors="false"
                                tools:ignore="TouchTargetSizeCheck" />
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/addToCart2"
                                android:background="@drawable/addcart"
                                android:layout_marginStart="220dp"/>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="140dp"
                                android:textSize="10pt"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="#E82F21"
                                android:text="            25% Sale"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="180dp">
                            <ImageButton
                                android:id="@+id/bestSeller3"
                                android:src="@drawable/seeds"
                                android:scaleType="fitCenter"
                                android:background="@color/white"
                                android:layout_width="250dp"
                                android:layout_height="150dp"/>
                            <CheckBox
                                android:id="@+id/wishlist2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/wishlist_item"
                                app:useMaterialThemeColors="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/addToCart3"
                                android:background="@drawable/addcart"
                                android:layout_marginStart="220dp"/>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="140dp"
                                android:textSize="10pt"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="#E82F21"
                                android:text="            18% Sale"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="180dp">
                            <ImageButton
                                android:id="@+id/bestSeller4"
                                android:src="@drawable/tools"
                                android:scaleType="fitCenter"
                                android:background="@color/white"
                                android:layout_width="250dp"
                                android:layout_height="150dp"/>
                            <CheckBox
                                android:id="@+id/wishlist3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/wishlist_item"
                                app:useMaterialThemeColors="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/addToCart4"
                                android:background="@drawable/addcart"
                                android:layout_marginStart="220dp"/>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="140dp"
                                android:textSize="10pt"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="#E82F21"
                                android:text="            20% Sale"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_marginTop="520dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Featured Products" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="570dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20sp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/f1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured2"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/p1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="800dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10sp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured3"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/s1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured4"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/t1"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1025dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10sp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured5"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/seed"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageButton
                            android:id="@+id/featured6"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/transparent"
                            android:src="@drawable/sprinkler"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:importantForAccessibility="no" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

