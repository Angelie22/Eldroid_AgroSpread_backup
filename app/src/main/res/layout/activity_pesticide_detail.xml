<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004941"
    tools:context="agrospread.PesticideDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/arrowback"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="260dp"
                android:background="@drawable/favorite"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="150dp">




            <androidx.cardview.widget.CardView
                android:layout_width="330dp"
                android:layout_height="200dp"
                android:id="@+id/cardImage"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/detailImage"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/p3"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:        Triazicide Insect Killer for Lawns"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="370dp"
            android:textSize="18sp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:         378.00"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="430dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="500dp"
            android:gravity="center_vertical">


            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:layout_marginStart="90dp"/>


            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"/>


            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:layout_marginEnd="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginTop="580dp"
            android:gravity="center">

            <Button
                android:id="@+id/addtocartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textColor="@color/white"
                android:backgroundTint="#2F6E1E"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rad4"
                android:textStyle="bold" />

            <Button
                android:id="@+id/orderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Now"
                android:textColor="@color/white"
                android:backgroundTint="#2F6E1E"
                android:background="@drawable/rad4"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="720dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="Featured Products"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="750dp"
            android:gravity="center"
            android:layout_marginBottom="20sp">

            <ImageView
                android:id="@+id/featured1"
                android:layout_width="180sp"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:background="@color/white"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:src="@drawable/f1"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/featured2"
                android:layout_width="180sp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:background="@color/white"
                android:src="@drawable/t2"
                android:importantForAccessibility="no" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="960dp"
            android:gravity="center"
            android:layout_marginBottom="10sp">

            <ImageView
                android:id="@+id/featured3"
                android:layout_width="180sp"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:background="@color/white"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:src="@drawable/f4"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/featured4"
                android:layout_width="180sp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:background="@color/white"
                android:src="@drawable/p3"
                android:importantForAccessibility="no" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>