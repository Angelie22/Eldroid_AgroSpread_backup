<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/backToSettingsPolicyBtn"
            style="@style/TransparentButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:padding="14dp"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="SpeakableTextPresentCheck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/agrospread_policy"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="38sp"
                android:textStyle="bold" />

            <!-- TextView to display app policies -->

            <!-- Button to acknowledge policies -->
            <TextView
                android:id="@+id/text_policies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/policy_numbers"
                android:textSize="16sp"
                tools:ignore="VisualLintLongText" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accept_policies_btn"
                android:textColor="@color/white"
                android:background="@drawable/login_button_selector"
                android:backgroundTint="#008080"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:padding="10dp"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
